<%- include('partials/header') %>


    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h2 class="h1 display-4">
            Score : <%=score.total%>/<%=score.questRes.length%>
        </h2>
    </div>

    <div class="row">
    </div>

    <div class="row">
        <form method="GET" action="/quizz/<%=score.questRes[0].quizz%>">
            <% for (const el of score.questRes){%>
                <div class="col-12">
                    <h4>
                        <%=el.question%>
                    </h4>
                    <p class="quizz__answer 
                     <%=(el.userRes.id===el.good_answer.id)?" quizz__answer--good":"quizz__answer--bad"%>
                        ">
                        <%=el.userRes.description%>
                    </p>
                    </ol>
                </div>
                <% } %>
                    <button class="quizz_form__validation btn btn-lg btn-primary btn-block">Rejouer</button>
        </form>
    </div>

    <%- include('partials/footer') %>